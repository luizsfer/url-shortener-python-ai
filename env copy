# Configurações da aplicação
APP_TITLE="URL Shortener API"
APP_DESCRIPTION="API para encurtamento de URLs com cache em memória"
APP_VERSION="1.0.0"

# Configurações de segurança
SECURITY_RATE_LIMIT_REQUESTS=100
SECURITY_RATE_LIMIT_PERIOD=3600
SECURITY_MAX_URL_LENGTH=2048
SECURITY_MAX_REQUEST_SIZE=1048576
SECURITY_IP_BLOCK_DURATION=3600
SECURITY_MAX_FAILED_REQUESTS=100
SECURITY_ALLOWED_SCHEMES=["http","https"]
SECURITY_BLOCKED_DOMAINS=["localhost","127.0.0.1"]
